        <Button
            android:id="@+id/SearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Search" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
