<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="comdobias14.github.bigfilefinder.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="comdobias14.github.bigfilefinder.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:tag="Files"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.666"
        tools:layout="@layout/fragment_item_list" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/NumberOfFiles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"

            android:text="0 items selected" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/PathOfFiles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:text="Current directory:\n/storage/emulated/0/" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>
